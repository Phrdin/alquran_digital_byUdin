{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "@vercel/php@0.6.0"
    }
  },
  "routes": [
    {
      "src": "/", // Tangani Root URL secara spesifik
      "dest": "api/index.php"
    },
    {
      "src": "/(.*)", // Tangani semua URL lainnya
      "dest": "api/index.php"
    }
  ]
}
